<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Ajay.Messenger.Invite">



    <TextView
        android:gravity="end"
        android:id="@+id/meet"
        android:layout_width="130dp"
        android:paddingRight="10dp"
        android:layout_height="30dp"
        android:text="To Meet :"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:layout_alignTop="@+id/meet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/AlertDialog.AppCompat.Light"
        android:layout_alignBottom="@+id/meet">

    </Spinner>
    <Button
        android:onClick="invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVITE"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:text="Time"
        android:gravity="end"
        android:id="@+id/tme"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/meet"
        android:layout_alignLeft="@+id/meet"
        android:layout_alignStart="@+id/meet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="end"
        android:text="20:11"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:id="@+id/tmebutt"
        android:layout_alignBottom="@+id/tme"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tme"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="end"
        android:paddingRight="10dp"
        android:text="Date"
        android:id="@+id/dtetxt"
        android:layout_alignBottom="@+id/dtebutt"
        android:layout_alignRight="@+id/tme"
        android:layout_alignEnd="@+id/tme"
        android:layout_below="@+id/tme" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:gravity="end"
        android:paddingRight="15dp"
        android:text="21/11/15"
        android:id="@+id/dtebutt"
        android:layout_alignLeft="@+id/tmebutt"
        android:layout_alignStart="@+id/tmebutt"
        android:layout_below="@+id/tmebutt"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view"
        android:id="@+id/view"
        android:onClick="view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
